<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:background="@android:color/white"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_addpost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:fontFamily="sans-serif"
            android:text="Add Post"
            android:textColor="@color/colorpurple"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/ed_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/montserrat"
            android:hint="Title"
            android:inputType="textCapWords|textCapSentences"
            android:paddingLeft="3dp"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_addarticle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_addarticle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="Add Article"
                android:textColor="@color/colorpurple" />

            <EditText
                android:id="@+id/ed_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:hint="Link (Optional)"
                android:paddingLeft="3dp"
                android:singleLine="true"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/ed_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/montserrat"
                android:hint="Article Description"
                android:inputType="textCapWords|textCapSentences|textMultiLine"
                android:lineSpacingExtra="2dp"
                android:paddingLeft="3dp"
                android:singleLine="false"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:visibility="gone" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_addpost"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_addpost"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:text="Upload Video / Image"
                android:textColor="@color/colorpurple" />

            <TextView
                android:id="@+id/tv_postname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:textColor="@color/colorpurple" />
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_uploadpost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="12dp"
            android:textAllCaps="false"
            app:backgroundTint="@color/purpleNew"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:textSize="17dp"
            app:iconSize="20dp"
            android:padding="15dp"
            android:text="Upload"
            android:textColor="@android:color/white" />



    </LinearLayout>
</LinearLayout>