<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:orientation="vertical"
    android:background="@color/colorpurple"
    android:layout_gravity="center"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="2dp"
        android:background="@android:color/white"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:text="Add Post"
            android:layout_margin="30dp"
            android:textSize="20dp"
            android:id="@+id/txt_addpost"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textColor="@color/colorpurple"
            android:layout_height="wrap_content"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:id="@+id/ed_title"
            android:hint="Title"
            android:inputType="textCapWords|textCapSentences"
            android:singleLine="true"
            android:paddingLeft="3dp"
            android:textColor="@android:color/black"
            android:textSize="15dp"
            android:layout_marginRight="15dp"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_addarticle"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/colorpurple"
                android:layout_height="40dp"
                android:id="@+id/tv_addarticle"
                android:gravity="center"
                android:text="Add Article"/>
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/ed_link"
                android:hint="Link (Optional)"
                android:visibility="gone"
                android:singleLine="true"
                android:paddingLeft="3dp"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:id="@+id/ed_description"
                android:hint="Article Description"
                android:paddingLeft="3dp"
                android:visibility="gone"
                android:inputType="textCapWords|textCapSentences|textMultiLine"
                android:layout_marginTop="10dp"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:singleLine="false"
                android:lineSpacingExtra="2dp"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/ll_addpost"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/colorpurple"
                android:layout_height="40dp"
                android:id="@+id/tv_addpost"
                android:gravity="center"
                android:text="Upload Video / Image"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/colorpurple"
                android:layout_height="wrap_content"
                android:id="@+id/tv_postname"
                android:gravity="center"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="150dp"
            android:layout_marginTop="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:textAllCaps="false"
            android:textSize="16dp"
            android:textColor="@android:color/white"
            android:background="@color/colorpurple"
            android:id="@+id/btn_uploadpost"
            android:text="Upload"
            android:layout_height="wrap_content"/>



    </LinearLayout>
</LinearLayout>