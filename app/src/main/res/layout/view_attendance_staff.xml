<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/attendance_listitem_back"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="@dimen/activity_horizontal_margin">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/markPresentButton1"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:buttonTint="?attr/colorPrimary"/>

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/markAbsentButton1"
            android:layout_width="64dp"
            android:layout_height="wrap_content"
            android:checked="true"
            android:buttonTint="@color/colorWarning"/>

    </RadioGroup>
    <LinearLayout
        android:layout_width="3dp"
        android:layout_height="match_parent"
        android:background="@android:color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:id="@+id/teachernamee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teacher Name"
            android:textAllCaps="true"
            android:textStyle="bold"/>

        <com.google.android.material.textview.MaterialTextView
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:id="@+id/teacheridd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Teacher ID"/>

    </LinearLayout>

</LinearLayout>