<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="1"
    android:id="@+id/ll_chatname"
    android:padding="7dp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="0dp"
        android:id="@+id/iv_pprofile"
        android:layout_margin="2dp"
        app:civ_border_color="@color/lightpurple"
        app:civ_border_width="0.5dp"
        android:src="@drawable/ic_person_black_24dp"
        android:layout_height="40dp"
        android:layout_weight="0.1"/>

    <androidx.legacy.widget.Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.02"/>
    <LinearLayout
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_weight="0.9"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="1"
            android:paddingRight="5dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:textSize="16dp"
                android:layout_gravity="center"
                android:textColor="@android:color/black"
                android:id="@+id/tv_chatwithname"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="10dp"
                android:layout_weight="0.4"
               android:gravity="right"
                android:layout_marginRight="5dp"
                android:layout_gravity="center"
                android:textColor="#676161"
                android:id="@+id/tv_chatdateee"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:weightSum="1"
            android:paddingRight="5dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.91"
                android:textSize="15dp"
                android:layout_gravity="center"
                android:textColor="#77716D"
                android:id="@+id/tv_msgname"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.08"
                android:textSize="14dp"
                android:textStyle="bold"
            android:visibility="gone"
                android:gravity="center"
                android:background="@drawable/msgcirclecount"
                android:layout_gravity="center"
                android:textColor="@android:color/white"
                android:id="@+id/tv_msgcounter"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="#AEA8A5"/>
</LinearLayout>