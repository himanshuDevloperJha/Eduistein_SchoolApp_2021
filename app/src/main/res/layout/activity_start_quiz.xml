<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_height="match_parent"
    tools:context=".quiz.StartQuizActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="?attr/actionBarSize"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="QUIZ"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#A6A09C"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:id="@+id/tv_ques"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:justificationMode="inter_word"
        android:textStyle="bold"
        android:textColor="#635E5B"
        android:text="Compete against other students in online quiz marathon and win awards!"
        android:layout_height="wrap_content"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_height="130dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_marginLeft="40dp"
        android:text="Start Quiz"
        android:id="@+id/btn_startquiz"
        android:textSize="18dp"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:layout_marginRight="40dp"
        android:layout_height="60dp"/>
</LinearLayout>