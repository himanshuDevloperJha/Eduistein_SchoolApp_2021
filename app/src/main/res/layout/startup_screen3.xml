<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="0dp"
    android:padding="0dp"
    android:background="@color/blurpurple">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="0"
        tools:ignore="MissingConstraints">
        <TableRow>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="109dp"
                android:src="@drawable/top_bar"
                tools:ignore="MissingConstraints"
                android:layout_weight="1"/>
        </TableRow>
        <TableRow>
            <ImageView
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/screen3"
                tools:ignore="MissingConstraints" />
        </TableRow>
        <TableRow>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="10dp"
                    android:src="@drawable/slider3"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>
        </TableRow>

        <TableRow>
            <TextView
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="St. Jhons senior secandary school"
                android:textAlignment="center"
                android:textSize="25dp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/black"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:paddingLeft="35dp"
                android:paddingTop="5dp"
                android:paddingRight="40dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get key for your sucess with help of eduistein."
                android:textAlignment="center"
                android:textSize="15dp"
                android:fontFamily="@font/montserrat"
                />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="60dp"
                />
        </TableRow>

        <TableRow
            android:padding="18dp">
            <com.google.android.material.button.MaterialButton
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cornerRadius="15dp"
                android:textAllCaps="false"
                app:backgroundTint="@color/purpleNew"
                android:fontFamily="@font/montserrat"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Lets get started"
                android:padding="13dp"
                />
        </TableRow>

    </TableLayout>



</androidx.constraintlayout.widget.ConstraintLayout>