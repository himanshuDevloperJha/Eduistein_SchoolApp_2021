<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_margin="0dp"
android:padding="0dp"
android:background="@color/blurpurple">
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:stretchColumns="0"
    tools:ignore="MissingConstraints">

    <TableRow>
        <TextView
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join daily basis activities, quizes to make your brain more sharper!"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:fontFamily="@font/montserrat"
            />
    </TableRow>

    <TableRow>
        <ImageView
            android:padding="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_brain_gym"
            tools:ignore="MissingConstraints" />
    </TableRow>

    <TableRow>
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="55dp"
            />
    </TableRow>

    <TableRow
        android:padding="20dp">
        <com.google.android.material.button.MaterialButton
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="15dp"
            android:textAllCaps="false"
            app:backgroundTint="@color/purpleNew"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:textSize="17dp"
            app:iconSize="20dp"
            app:icon="@drawable/ic_quiz_btn"
            android:text="Quizs"
            android:padding="15dp"
            />
    </TableRow>

    <TableRow
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp">
        <com.google.android.material.button.MaterialButton
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="15dp"
            android:textAllCaps="false"
            app:backgroundTint="@color/purpleNew"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:textSize="17dp"
            app:iconSize="20dp"
            app:icon="@drawable/ic_concept_gym_btn"
            android:text="Concept Gym"
            android:padding="15dp"
            />
    </TableRow>

    <TableRow
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <com.google.android.material.button.MaterialButton
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="15dp"
            android:textAllCaps="false"
            app:backgroundTint="@color/purpleNew"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:textSize="17dp"
            app:iconSize="20dp"
            app:icon="@drawable/ic_videos_btn"
            android:text="Videos"
            android:padding="15dp"
            />
    </TableRow>

</TableLayout>



</androidx.constraintlayout.widget.ConstraintLayout>